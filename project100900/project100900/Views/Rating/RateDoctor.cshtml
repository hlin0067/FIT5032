@model project100900.Models.Rating

<h2>Rate @Model.DoctorName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.DoctorName)
    @Html.HiddenFor(model => model.UserId)
    <div class="form-group">
        @Html.LabelFor(model => model.Score, new { @class = "control-label" })
        <input id="ratingInput" name="Score" value="@Model.Score" type="number" class="rating" min=0 max=5 step=0.5 data-size="lg" />
        @Html.ValidationMessageFor(model => model.Score, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" value="Rate" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-star-rating@4.0.6/css/star-rating.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-star-rating@4.0.6/js/star-rating.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ratingInput').rating();
        });
    </script>
}